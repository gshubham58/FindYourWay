<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.shubham.findyourway.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIND YOUR WAY"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="locality and area"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" City"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/e3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Nearby"
        android:textColor="#0000ff"
        android:shadowColor="#ffffff"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <!-- <Button
         android:id="@+id/path"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Route"
         android:layout_above="@+id/geopath"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="80dp" />

    -->
    <Button
        android:id="@+id/geopath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="#ffffff"
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:layout_marginBottom="59dp"
        android:text="search path"
        android:textStyle="italic" />


</RelativeLayout>
